<?xml version="1.0"?>
<config>
    <modules>
            <J2t_Rewardsocial>
                    <version>1.0.0</version>
                    <depends>
                            <Mage_Customer />
                            <Mage_Checkout />
                            <Rewardpoints />
                    </depends>
            </J2t_Rewardsocial>
    </modules>


    <global>
        
        <resources>
            <j2trewardsocial_setup>
                <setup>
                    <module>J2t_Rewardsocial</module>
                    <!--<class>Mage_Core_Model_Resource_Setup</class>-->
                    <!-- default setup since magento 1.6.x -->
                    <!-- <class>Mage_Sales_Model_Resource_Setup</class> -->
                    <!-- magento 1.3.x, 1.4.x & 1.5.x -->
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
                <connection><use>core_setup</use></connection>
            </j2trewardsocial_setup>
            <j2trewardsocial_write>
                    <connection><use>core_write</use></connection>
            </j2trewardsocial_write>
            <j2trewardsocial_read>
                    <connection><use>core_read</use></connection>
            </j2trewardsocial_read>
        </resources>
        
        <models>
            <j2trewardsocial>
                <class>J2t_Rewardsocial_Model</class>
                <resourceModel>rewardpoints_mysql4</resourceModel>
            </j2trewardsocial>
            
        </models>
        
        <blocks>
            <j2trewardsocial>
                <class>J2t_Rewardsocial_Block</class>
            </j2trewardsocial>
        </blocks>
        
        <helpers>
            <j2trewardsocial>
                <class>J2t_Rewardsocial_Helper</class>
            </j2trewardsocial>
        </helpers>
        
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <j2trewardsocial_on_page>
                        <class>J2t_Rewardsocial_Model_Observer</class>
                        <method>setSocialPointsOnProductPages</method>
                    </j2trewardsocial_on_page>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        
    </global>
    
    <adminhtml>
        <translate>
            <modules>
                <j2trewardsocial>
                    <files>
                        <default>j2t_rewardsocial.csv</default>
                    </files>
                </j2trewardsocial>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        
        <product>
            <collection>
                <attributes>
                    <rewardsocial_facebook/>
                    <rewardsocial_google/>
                    <rewardsocial_twitter/>
                </attributes>
            </collection>
        </product>
        
        <translate>
            <modules>
                <j2trewardsocial>
                    <files>
                        <default>j2t_rewardsocial.csv</default>
                    </files>
                </j2trewardsocial>
            </modules>
        </translate>

        <routers>
            <j2trewardsocial>
                <use>standard</use>
                <args>
                    <module>J2t_Rewardsocial</module>
                    <frontName>j2trewardsocial</frontName>
                </args>
            </j2trewardsocial>
        </routers>
        
        <events>
            <!--<model_load_after>
                <observers>
                    <j2trewardsocial_model_load>
                        <type>singleton</type>
                        <class>j2trewardsocial/observer</class>
                        <method>modelLoadExtra</method>
                    </j2trewardsocial_model_load>
                </observers>
            </model_load_after>
            <model_save_after>
                <observers>
                    <j2trewardsocial_model_save>
                        <type>singleton</type>
                        <class>j2trewardsocial/observer</class>
                        <method>modelSaveExtra</method>
                    </j2trewardsocial_model_save>
                </observers>
            </model_save_after>-->
            <!--<sales_convert_quote_to_order>
                <observers>
                    <j2trewardsocial_quote_order>
                        <type>singleton</type>
                        <class>j2trewardsocial/observer</class>
                        <method>quoteOrderLoadExtra</method>
                    </j2trewardsocial_quote_order>
                </observers>
            </sales_convert_quote_to_order>-->
        </events>
        
        <layout>
            <updates>
                <j2trewardsocial>
                    <file>j2trewardsocial.xml</file>
                </j2trewardsocial>
            </updates>
        </layout>
        
    </frontend>
    
    <default>
        <rewardpoints>
            <social>
                <facebook_like_points>0</facebook_like_points>
                <googleplus_points>0</googleplus_points>
                <pinterest_points>0</pinterest_points>
                <twitter_points>0</twitter_points>
                <use_url_shortener>0</use_url_shortener>
                <max_share_per_customer>0</max_share_per_customer>
            </social>
        </rewardpoints>
        
    </default>
</config>

